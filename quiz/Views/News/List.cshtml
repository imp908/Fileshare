@{
    Layout = null;
    Layout = "~/Views/Shared/_Layout_JsonAngularDriver.cshtml";
}
@model List<Intranet.Models.NewsModel.News>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>

    <script>
        $(document).ready(function () {
            $('#news').DataTable(
            );
        });
    </script>
</head>
<body>
    <div class="col-md-8 col-md-offset-2">
        <br>
        <a href="/News/Constructor" class="btn btn-info" role="button">Создать новость</a>
        <br>
        <br>
        <table id="news" class="table table-striped table-bordered dataTable">
            <thead>
                <tr>
                    <th><p>Заголовок новости</p></th>
                    <th><p>Автор</p></th>
                    <th><p>Дата создания</p></th>
                    <th><p>Дата изменения</p></th>
                    <th><p>Статус</p></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var b in Model)
            {
                    <tr>
                        <td><p><a href="/News/Viewer/?id=@b.Id">@b.Subject</a></p></td>
                        <td><p>@b.Author</p></td>
                        <td><p>@b.CreationDateTime.ToString("dd/MM/yyyy HH:mm:ss")</p></td>
                        <td><p>@b.LastUpdateDateTime.ToString("dd/MM/yyyy HH:mm:ss")</p></td>
                        @if (@b.State == Intranet.Models.NewsModel.State.Drafted)
                        {
                            <td><p><a href="/News/Constructor/?id=@b.Id"> Черновик </a></p></td>
                        }
                        else
                        {
                            <td><p><a href="/News/Constructor/?id=@b.Id"> Опубликована </a></p></td>
                        }
                        
                        <td align="center"><button type="button" class="btn btn-danger disabled"><span class="glyphicon glyphicon-trash"></span></button></td>
                    </tr>

            }
            </tbody>
        </table>
    </div>


</body>

</html>
